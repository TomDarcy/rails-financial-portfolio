<!-- app/views/investments/new.html.erb -->
<h1>New Investment</h1>
<%= form_for @investment do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :investment_type %>
  <%= f.select :investment_type, ['stocks', 'bonds', 'mutual funds'] %>
  <%= f.submit %>
<% end %>
